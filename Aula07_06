-- Selecionando o Banco de Dados
USE db_Controle;

-- Uni達o de duas consultas
SELECT idContato_fk FROM tbl_Compromissos 
UNION
SELECT idContato FROM tbl_Contatos




-- Selecionando o Banco de Dados
USE db_Controle;

-- Uni達o de duas consultas
SELECT idContato_fk FROM tbl_Compromissos 
UNION ALL
SELECT idContato FROM tbl_Contatos


-- Selecionando o Banco de Dados
